<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/plant2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="560dp"
        android:layout_marginTop="212dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="320sp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/toggle_background"
                android:orientation="horizontal"
                android:padding="3dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/loginTab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tab_unselected"
                    android:clickable="true"
                    android:fontFamily="sans-serif-black"
                    android:text="Login"
                    android:textColor="#686767" />

                <Button
                    android:id="@+id/registerTab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tab_selected"
                    android:clickable="false"
                    android:fontFamily="sans-serif-black"
                    android:text="Register"
                    android:textColor="@color/black" />
            </LinearLayout>

            <EditText
                android:id="@+id/editFirstName"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_background"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/editLastName"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_background"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/editUserName"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_background"
                android:hint="Username"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textSize="17sp" />


            <EditText
                android:id="@+id/editContact"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_background"
                android:hint="Contact Number"
                android:inputType="phone"
                android:padding="10dp"
                android:textSize="17sp" />


            <!-- Email -->
            <EditText
                android:id="@+id/editEmail"
                android:layout_width="320sp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input_background"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textSize="17dp" />

            <!-- Password -->
            <EditText
                android:id="@+id/editPassword"
                android:layout_width="320sp"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/input_background"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="17dp" />

            <!-- Remember me + Forgot password -->

            <!-- Login Button -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="320sp"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button"
                android:backgroundTint="#529E71"
                android:fontFamily="sans-serif-black"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="17dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="56dp"
        android:fontFamily="sans-serif-black"
        android:text="Go ahead and set up your account"
        android:textColor="@color/white"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="144dp"
        android:text="Designed to help you monitor, manage, and nurture your plants with ease."
        android:textColor="#DCDCDC"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
