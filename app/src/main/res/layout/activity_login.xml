<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plant2"
    tools:context=".Login">

    <TextView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="228dp"
        android:text="Designed to help you monitor, manage, and nurture your plants with ease."
        android:textColor="#DCDCDC"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="140dp"
        android:fontFamily="sans-serif-black"
        android:text="Go ahead and set up your account"
        android:textColor="@color/white"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="400dp"
        android:layout_marginTop="304dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Title -->


            <!-- Toggle Tabs -->

            <LinearLayout
                android:layout_width="320sp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/toggle_background"
                android:orientation="horizontal"
                android:padding="3dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/loginTab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:background="@drawable/tab_selected"
                    android:fontFamily="sans-serif-black"
                    android:text="Login"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/registerTab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tab_unselected"
                    android:fontFamily="sans-serif-black"
                    android:clickable="true"
                    android:text="Register"
                    android:textColor="#686767" />
            </LinearLayout>

            <!-- Email -->
            <EditText
                android:id="@+id/editEmail"
                android:layout_width="320sp"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input_background"
                android:drawableLeft="@android:drawable/ic_dialog_email"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:padding="10dp" />

            <!-- Password -->
            <EditText
                android:id="@+id/editPassword"
                android:layout_width="320sp"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/input_background"
                android:drawableLeft="@android:drawable/ic_lock_lock"
                android:hint="Password"
                android:textSize="17dp"
                android:inputType="textPassword"
                android:padding="10dp" />

            <!-- Remember me + Forgot password -->

            <!-- Login Button -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="320sp"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button"
                android:backgroundTint="#529E71"
                android:fontFamily="sans-serif-black"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="17dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>